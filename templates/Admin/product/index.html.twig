{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}
    <h1>Product index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Slug</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Sku</th>
            <th>PictureUrl</th>
            <th>DateAdd</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.slug }}</td>
                <td>{{ product.price }}</td>
                <td>{{ product.stock }}</td>
                <td>{{ product.sku }}</td>
                <td>{{ product.pictureUrl }}</td>
                <td>{{ product.dateAdd ? product.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('admin_product_show', {'id': product.id}) }}"  class="btn btn-info" role="button">show</a>
                    <a href="{{ path('admin_product_edit', {'id': product.id}) }}"  class="btn btn-success" role="button">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_product_new') }}" class="btn btn-info" role="button">Create new</a>
{% endblock %}
