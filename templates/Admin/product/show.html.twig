{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>{{ product.name }}</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ product.name }}</td>
        </tr>
        <tr>
            <th>Slug</th>
            <td>{{ product.slug }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ product.price }}</td>
        </tr>
        <tr>
            <th>Stock</th>
            <td>{{ product.stock }}</td>
        </tr>
        <tr>
            <th>Sku</th>
            <td>{{ product.sku }}</td>
        </tr>
        <tr>
            <th>PictureUrl</th>
            <td>{{ product.pictureUrl }}</td>
        </tr>
        <tr>
            <th>DateAdd</th>
            <td>{{ product.dateAdd ? product.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_product_list') }}" class="btn btn-success" role="button">back to list</a>

    <a href="{{ path('admin_product_edit', {'id': product.id}) }}" class="btn btn-success" role="button">edit</a>

    {{ include('admin/product/_delete_form.html.twig') }}
{% endblock %}
