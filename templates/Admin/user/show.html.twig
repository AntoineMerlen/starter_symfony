{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>{{ user.username }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Livraison_facturation</th>
                <td>{{ user.livraisonFacturation }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_user_list') }}" class="btn btn-info" role="button">back to list</a>

    <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-success" role="button">edit</a>

    {{ include('Admin/user/_delete_form.html.twig') }}
{% endblock %}
