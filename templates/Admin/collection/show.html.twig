{% extends 'base.html.twig' %}

{% block title %}Collection{% endblock %}

{% block body %}
    <h1>Collection</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ collection.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ collection.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ collection.slug }}</td>
            </tr>
            <tr>
                <th>PictureUrl</th>
                <td>{{ collection.pictureUrl }}</td>
            </tr>
            <tr>
                <th>DateAdd</th>
                <td>{{ collection.dateAdd ? collection.dateAdd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_collection_list') }}" class="btn btn-info" role="button">back to list</a>

    <a href="{{ path('admin_collection_edit', {'id': collection.id}) }}" class="btn btn-success" role="button">edit</a>

    {{ include('Admin/collection/_delete_form.html.twig') }}
{% endblock %}
